<div class="col-sm-12 col-md-6 col-lg-3">
    <div class="card">
      <img src="<%=productos[i].image%>" class="card-img-top" alt="Product image">
      <div class="card-body">
        <h5 class="card-title"><%= productos[i].name%></h5>
        <p class="card-text">$<%= productos[i].price%></p>
        <p class="card-text"><%= productos[i].category%></p>
        <a href="/products/<%= productos[i].id%>" class="btn btn-primary">Ver detalle</a>
      </div>
    </div>
  </div>