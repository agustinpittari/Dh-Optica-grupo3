<! HEAD -->
<%- include('../partials/head') %>
<! HEAD -->

<body>
    <! HEADER -->
    <%- include('../partials/header') %>
    <! HEADER -->
    
    <main>
        <div class="producto-container">
            <h2>Editar Producto</h2>
            <form method="POST" action="/products/edit/<%=producto.id%>?_method=PUT">
                <div>
                    <label for="nombre">Nombre</label><br>
                    <input type="text" name="nombre" id="nombre" value="<%= producto.nombre %>">
                </div>
                <div>
                    <label for="descripcion">Descripcion</label><br>
                    <input type="text" name="descripcion" id="descripcion" value="<%= producto.descripcion %>">
                </div>
                <div>
                    <label for="categoria">Categoria</label><br>
                    <select name="categoria" >
                        <% for (let i = 0; i < categorias.length; i++) { %>
                        <option value="<%= categorias[i].id %>" <%= producto.categoria_id ? (producto.categoria_id == categorias[i].id ) ? 'selected' : '' : '' %>><%= categorias[i].nombre %></option>
                        <% } %>
                    </select>
                </div>
                <div>
                    <label for="categoria">Marca</label><br>
                    <select name="marca">
                        <% for (let i = 0; i < marcas.length; i++) { %>
                        <option value="<%= marcas[i].id %>" <%= producto.marca_id ? (producto.marca.id == marcas[i].id ) ? 'selected' : '' : ''%>><%= marcas[i].nombre %></option>
                        <% } %>
                    </select>
                </div>
                <div>
                    <label for="precio">Precio</label><br>
                    <input type="number" name="precio" id="precio" value="<%= producto.precio %>">
                </div>
                <div>
                    <button class="btn btn-dark" type="submit">Editar Producto</button>
                </div>
            </form>
        </div>
        <! FOOTER -->
        <%- include('../partials/footer') %>
        <! FOOTER -->
    </main>
</body>