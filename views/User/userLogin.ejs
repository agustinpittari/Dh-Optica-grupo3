<!DOCTYPE html>
<html lang="en">
<! HEAD -->
<%- include('../partials/head') %>
<! HEAD -->

<body> 
    <div class=container>
        <main>
            <div>
                <h2>Loguearse</h2>
                <% if (typeof errors != 'undefined') { %>     
                    <ul>
                        <% for (i = 0; i < errors.length; i++) { %>
                            <li><%= errors[i].msg%></li>        
                        <% } %>
                    </ul>
                <% } %>
                <form action="/users/login" method="POST">
                    <label for="email">Email</label><br>
                    <input type="email" name="email" id="email" value="<%= typeof data != 'undefined' ? data.email : '' %>"><br>
                    <label for="contrasenia">Contrase√±a</label><br>
                    <input type="password" name="password" id="contrasenia"><br>
                    <button class="btn btn-dark" type="submit">Iniciar sesion</button>
                </form>
            </div>
        </main>


    </div>

    <! FOOTER -->
    <%- include('../partials/footer') %>
    <! FOOTER -->
</body>

</html>